        ],
        "summary": "Sign up a new user",
        "operationId": "signupUser",
        "description": "Sign up a user with email and password",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userSignup"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User signed up successfully",
